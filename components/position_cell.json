            "ConditionAnd": "{RenderP3Colors}",
            "Property": "Foreground",
            "Value": "{P3Foreground}"
        },
        {
            "Condition": "{Item.IntervalRace, Converter=StringEquals, Parameter=DNF}",
            "ConditionAnd": "{RenderDNFText}",
            "Property": "Foreground",
            "Value": "{DNFText}"
        },
