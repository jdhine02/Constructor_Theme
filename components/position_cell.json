{
    "BlockType": "text",
    "Source": "<position>",
    "Width": 65,
    "Height": 68,
    "BackgroundImage": "position_bg.png",
    "Background": "{BackgroundDefault}",
    "FontName": "{FontNameDefault}",
    "FontSize": 40,
    "Foreground": "WhiteText",
    "TextOptions": {
        "HorizontalAlignment": "Center"    
    },
    "ColorizeBackground": {
        "Enabled": false,
        "Color": "{P1Foreground}",
        "BlendPercentage": 50
    },
    "Triggers" : [ 

        {
            "Condition": "{ItemIndex, Converter=NumberEquals, Parameter=0}",
            "Property": "ColorizeBackgroundOptions.Enabled",
            "Value": true
        },
        {
            "Condition": "{Item.Position, Converter=NumberEquals, Parameter=1}",
            "ConditionAnd": "{RenderP1Colors}",
            "Property": "Foreground",
            "Value": "{P1Foreground}"
        },
        {
            "Condition": "{Item.Position, Converter=NumberEquals, Parameter=2}",
